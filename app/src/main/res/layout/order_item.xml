<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/innerlayout"
        android:background="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/cardview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imgview"
                android:src="@drawable/friedchicken"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/cardview"
            android:text="Chicken Burger"
            android:textSize="19dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/cardview"
            android:text="Order Number: "
            android:textSize="15dp"
            android:layout_marginLeft="17dp"
            />
        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/order_text"
            android:text="34567"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#E91E63"
            />


        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardview"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:text="Price: Rs 450"
            android:textSize="15dp"
            android:layout_marginLeft="17dp"
            android:textColor="#E91E63"
            />
        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="___________________________________________________________"
            android:textColor="#CDC7C7"
            android:textSize="5dp"
            android:layout_marginTop="-5dp"
            />

    </RelativeLayout>

</LinearLayout>